{% if ( order ) %}
<table class="table table-striped table-bordered table-hover">
    <thead>
	<tr>
	    <th>#</th>
	    <th>Customer Name</th>
	    <th>Customer Email</th>
	    <th>Created</th>
	    <th>Description</th>
	    <th>Teacher Id</th>
	</tr>
    </thead>
    <tbody>
	<tr>
	    <td>{{order.id}}</td>
	    <td>{{order.CustomerName|raw}}</td>
	    <td>{{order.CustomerEmail|raw}}</td>
	    <td>{{order.Created.date|date('Y-m-d H:i:s')}}</td>
	    <td>{{order.OrderDescription|raw}}</td>
	    <td>{{order.TeacherId}}</td>
	</tr>
    </tbody>
</table>
{% endif %}